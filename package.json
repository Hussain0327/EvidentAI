{
  "name": "evidentai",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @evidentai/cli build && pnpm --filter @evidentai/gateway build",
    "build:cli": "pnpm --filter @evidentai/cli build",
    "build:gateway": "pnpm --filter @evidentai/gateway build",
    "dev": "pnpm --filter @evidentai/cli dev",
    "dev:gateway": "pnpm --filter @evidentai/gateway dev",
    "test": "pnpm --filter @evidentai/cli test && pnpm --filter @evidentai/gateway test",
    "test:cli": "pnpm --filter @evidentai/cli test",
    "test:gateway": "pnpm --filter @evidentai/gateway test",
    "lint": "pnpm --filter @evidentai/cli lint",
    "typecheck": "pnpm --filter @evidentai/cli typecheck && pnpm --filter @evidentai/gateway typecheck",
    "clean": "pnpm --filter @evidentai/cli clean && pnpm --filter @evidentai/gateway clean",
    "gateway:start": "pnpm --filter @evidentai/gateway start"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  }
}
